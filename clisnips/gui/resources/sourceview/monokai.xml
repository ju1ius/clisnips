<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="monokai" _name="Monokai" version="1.0">
  <author>ju1ius</author>
  <_description>Based on Monokai Pro</_description>

  <color name="text_bg" value="#2c2a2d"/>
  <color name="text_fg" value="#f8f8f0"/>
  <color name="purple" value="#ab9df2"/>
  <color name="grey" value="#929292"/>
  <color name="grey-dark" value="#49474a"/>
  <color name="lime" value="#a9dc76"/>
  <color name="pink" value="#ff6087"/>
  <color name="cyan" value="#78dce8"/>
  <color name="yellow" value="#ffd766"/>

  <style name="text" foreground="text_fg" background="text_bg"/>
  <style name="bracket-match"  background="grey-dark" bold="true"/>
  <style name="bracket-mismatch"  background="grey-dark" underline="true"/>
  <style name="current-line"  background="grey-dark"/>
  <style name="cursor" foreground="text_fg"/>
  <style name="draw-spaces" foreground="grey"/>
  <style name="line-numbers" foreground="grey" background="text_bg"/>
  <style name="search-match"  background="grey-dark" bold="true" underline="true"/>
  <style name="selection" foreground="text_fg" background="grey-dark"/>
  <style name="def:base-n-integer" foreground="purple"/>
  <style name="def:boolean" foreground="purple"/>
  <style name="def:builtin" foreground="purple"/>
  <style name="def:character" foreground="purple"/>
  <style name="def:comment" foreground="grey"/>
  <style name="def:complex" foreground="purple"/>
  <style name="def:decimal" foreground="purple"/>
  <style name="def:doc-comment" foreground="grey"/>
  <style name="def:doc-comment-element" foreground="grey"/>
  <style name="def:error" foreground="text_fg" background="pink"/>
  <style name="def:floating-point" foreground="purple"/>
  <style name="def:function" foreground="lime"/>
  <style name="def:keyword" foreground="pink"/>
  <style name="def:note" foreground="grey"/>
  <style name="def:number" foreground="purple"/>
  <style name="def:operator" foreground="pink"/>
  <style name="def:preprocessor" foreground="cyan"/>
  <style name="def:reserved" foreground="pink"/>
  <style name="def:shebang" foreground="grey"/>
  <style name="def:special-char" foreground="cyan"/>
  <style name="def:special-constant" foreground="purple"/>
  <style name="def:statement" foreground="pink"/>
  <style name="def:string" foreground="yellow"/>
  <style name="def:type" foreground="cyan" italic="true"/>

</style-scheme>
